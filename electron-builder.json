{
  "appId": "com.logowl.app",
  "productName": "Log Owl",
  "directories": {
    "output": "release"
  },
  "files": ["dist/**/*", "dist-electron/**/*", "package.json"],
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis"]
  },
  "linux": {
    "target": ["AppImage"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
